<Window x:Class="СSApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:СSApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1000" ResizeMode="NoResize"
        Name="MainView">
    <Window.Style>
        <Style TargetType="Window"
               BasedOn="{StaticResource {x:Type Window}}" />
    </Window.Style>
    <Window.DataContext>
        <local:MainViewModel /> 
    </Window.DataContext>
    <Grid>
        <ScrollViewer x:Name="ScrollViewer"
                      ScrollChanged="ScrollViewer_ScrollChanged">
            <ListBox ItemsSource="{Binding MessagesCollection}"
                     IsEnabled="False"
                     Width="950">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <local:LineControl DataContext="{Binding}" Width="950"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
    </Grid>
</Window>
